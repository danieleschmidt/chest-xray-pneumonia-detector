# ═══════════════════════════════════════════════════════════════════════════════
# 🔬 Chest X-Ray Pneumonia Detector - Enhanced EditorConfig
# ═══════════════════════════════════════════════════════════════════════════════
# EditorConfig helps maintain consistent coding styles across editors and IDEs
# See: https://editorconfig.org

root = true

# ┌─────────────────────────────────────────────────────────────────────────────┐
# │ 🌐 GLOBAL DEFAULTS                                                           │
# └─────────────────────────────────────────────────────────────────────────────┘
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

# ┌─────────────────────────────────────────────────────────────────────────────┐
# │ 🐍 PYTHON FILES                                                             │
# └─────────────────────────────────────────────────────────────────────────────┘
[*.{py,pyi}]
indent_style = space
indent_size = 4
max_line_length = 88
quote_type = double

# ┌─────────────────────────────────────────────────────────────────────────────┐
# │ 📄 CONFIGURATION & DATA FILES                                               │
# └─────────────────────────────────────────────────────────────────────────────┘
[*.{yml,yaml}]
indent_style = space
indent_size = 2

[*.{json,jsonc,json5}]
indent_style = space
indent_size = 2

[*.toml]
indent_style = space
indent_size = 4

[*.{ini,cfg}]
indent_style = space
indent_size = 4

[*.{env,env.*}]
indent_style = space
indent_size = 4

# ┌─────────────────────────────────────────────────────────────────────────────┐
# │ 📋 DOCUMENTATION & MARKUP                                                   │
# └─────────────────────────────────────────────────────────────────────────────┘
[*.{md,markdown}]
indent_style = space
indent_size = 2
trim_trailing_whitespace = false

[*.rst]
indent_style = space
indent_size = 3

[*.txt]
indent_style = space
indent_size = 4

# ┌─────────────────────────────────────────────────────────────────────────────┐
# │ 🐳 DOCKER & CONTAINERIZATION                                                │
# └─────────────────────────────────────────────────────────────────────────────┘
[Dockerfile*]
indent_style = space
indent_size = 4

[docker-compose*.yml]
indent_style = space
indent_size = 2

[.dockerignore]
indent_style = space
indent_size = 2

# ┌─────────────────────────────────────────────────────────────────────────────┐
# │ 🔧 BUILD & AUTOMATION FILES                                                 │
# └─────────────────────────────────────────────────────────────────────────────┘
[Makefile]
indent_style = tab
indent_size = 4

[*.mk]
indent_style = tab
indent_size = 4

[*.{sh,bash,zsh}]
indent_style = space
indent_size = 2

[*.{bat,cmd}]
indent_style = space
indent_size = 4
end_of_line = crlf

# ┌─────────────────────────────────────────────────────────────────────────────┐
# │ 🌐 WEB TECHNOLOGIES                                                         │
# └─────────────────────────────────────────────────────────────────────────────┘
[*.{html,htm}]
indent_style = space
indent_size = 2

[*.{css,scss,sass}]
indent_style = space
indent_size = 2

[*.{js,jsx,ts,tsx}]
indent_style = space
indent_size = 2

# ┌─────────────────────────────────────────────────────────────────────────────┐
# │ 🔄 VERSION CONTROL & CI/CD                                                  │
# └─────────────────────────────────────────────────────────────────────────────┘
[.gitignore]
indent_style = space
indent_size = 2

[.gitattributes]
indent_style = space
indent_size = 2

[.github/**/*.{yml,yaml}]
indent_style = space
indent_size = 2

# ┌─────────────────────────────────────────────────────────────────────────────┐
# │ 📝 IDE & EDITOR CONFIGURATION                                               │
# └─────────────────────────────────────────────────────────────────────────────┘
[.vscode/*.json]
indent_style = space
indent_size = 2

[*.{code-workspace,code-snippets}]
indent_style = space
indent_size = 2

# ┌─────────────────────────────────────────────────────────────────────────────┐
# │ 🧪 TESTING & QUALITY ASSURANCE                                              │
# └─────────────────────────────────────────────────────────────────────────────┘
[pytest.ini]
indent_style = space
indent_size = 4

[tox.ini]
indent_style = space
indent_size = 4

[.pre-commit-config.yaml]
indent_style = space
indent_size = 2

# ┌─────────────────────────────────────────────────────────────────────────────┐
# │ 📦 PACKAGE & DEPENDENCY FILES                                               │
# └─────────────────────────────────────────────────────────────────────────────┘
[requirements*.txt]
indent_style = space
indent_size = 4

[setup.{py,cfg}]
indent_style = space
indent_size = 4

[pyproject.toml]
indent_style = space
indent_size = 4

[package*.json]
indent_style = space
indent_size = 2

# ┌─────────────────────────────────────────────────────────────────────────────┐
# │ 🗃️ BINARY & SPECIAL FILES                                                   │
# └─────────────────────────────────────────────────────────────────────────────┘
# Binary files - no text processing
[*.{png,jpg,jpeg,gif,bmp,ico,webp,pdf,zip,tar,gz,rar,7z,h5,hdf5,pkl,pickle,joblib}]
charset = unset
trim_trailing_whitespace = false
insert_final_newline = false

# Font files
[*.{ttf,otf,woff,woff2,eot}]
charset = unset
trim_trailing_whitespace = false
insert_final_newline = false

# Certificate and key files
[*.{pem,key,crt,cert}]
trim_trailing_whitespace = false
insert_final_newline = false