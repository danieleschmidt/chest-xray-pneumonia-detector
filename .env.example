# Environment Configuration for Chest X-Ray Pneumonia Detector
# Copy this file to .env and update values as needed

# Application Settings
APP_NAME=chest-xray-pneumonia-detector
APP_VERSION=0.2.0
ENVIRONMENT=development

# API Configuration
API_HOST=0.0.0.0
API_PORT=8080
API_WORKERS=1
API_LOG_LEVEL=info

# MLflow Configuration
MLFLOW_TRACKING_URI=http://localhost:5000
MLFLOW_EXPERIMENT_NAME=pneumonia-detector
MLFLOW_ARTIFACT_ROOT=file:///workspace/mlruns

# Database Configuration (for production)
DATABASE_URL=postgresql://user:password@localhost:5432/cxr_db
MONGODB_URL=mongodb://localhost:27017/cxr_metadata

# Model Configuration
DEFAULT_MODEL_PATH=saved_models/pneumonia_cnn_v1.keras
MODEL_CACHE_SIZE=5
INFERENCE_BATCH_SIZE=32
MAX_IMAGE_SIZE_MB=50

# Data Processing
IMAGE_SIZE=224,224
AUGMENTATION_ENABLED=true
NORMALIZATION_MEAN=0.485,0.456,0.406
NORMALIZATION_STD=0.229,0.224,0.225

# Security Configuration
SECRET_KEY=your-secret-key-here-change-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE_PATH=logs/app.log
LOG_MAX_SIZE_MB=100
LOG_BACKUP_COUNT=5

# Monitoring Configuration
METRICS_ENABLED=true
METRICS_PORT=9090
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_ENDPOINT=/health

# Storage Configuration
DATA_ROOT_PATH=/workspace/data
MODEL_STORAGE_PATH=/workspace/saved_models
ARTIFACT_STORAGE_PATH=/workspace/.artifacts
TEMP_STORAGE_PATH=/tmp/cxr

# Performance Configuration
GPU_ENABLED=false
GPU_MEMORY_LIMIT=4096
CPU_WORKERS=4
CACHE_TTL_SECONDS=3600

# Development Configuration
DEBUG=true
RELOAD=true
PROFILING_ENABLED=false
MOCK_INFERENCE=false

# Medical Data Compliance
HIPAA_COMPLIANT=true
PHI_ENCRYPTION_KEY=your-encryption-key-here
AUDIT_LOG_ENABLED=true
DATA_RETENTION_DAYS=2555  # 7 years

# External Services
DICOM_SERVER_URL=http://localhost:8042
PACS_INTEGRATION_ENABLED=false
EMR_WEBHOOK_URL=https://your-emr-system.com/webhook

# Testing Configuration
TEST_DATA_PATH=tests/fixtures
PYTEST_TIMEOUT=300
COVERAGE_THRESHOLD=80

# Deployment Configuration
DOCKER_REGISTRY=your-registry.com
KUBERNETES_NAMESPACE=cxr-production
REPLICAS=3
RESOURCE_LIMITS_CPU=2
RESOURCE_LIMITS_MEMORY=4Gi