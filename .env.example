# Environment Configuration Template
# Copy this file to .env and update values as needed

# MLflow Configuration
MLFLOW_TRACKING_URI=http://localhost:5000
MLFLOW_EXPERIMENT_NAME=pneumonia-detector
MLFLOW_S3_ENDPOINT_URL=
MLFLOW_ARTIFACT_ROOT=./mlruns

# Model Configuration
MODEL_REGISTRY_PATH=./saved_models
CHECKPOINT_DIR=./checkpoints
DEFAULT_MODEL_NAME=pneumonia_cnn_v1

# Data Configuration
DATA_ROOT_DIR=./data
TRAIN_DIR=./data/train
VAL_DIR=./data/val
TEST_DIR=./data/test

# Training Configuration
DEFAULT_BATCH_SIZE=32
DEFAULT_EPOCHS=50
DEFAULT_LEARNING_RATE=0.001
DEFAULT_DROPOUT_RATE=0.5

# Inference Configuration
DEFAULT_IMG_SIZE=224,224
DEFAULT_THRESHOLD=0.5

# Security Configuration
BANDIT_SEVERITY_LEVEL=medium
SECURITY_SCAN_PATHS=src,tests

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# API Configuration (Future)
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4

# Database Configuration (Future)
DATABASE_URL=sqlite:///./pneumonia_detector.db

# Cloud Storage Configuration (Future)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-west-2
S3_BUCKET_NAME=

# Monitoring Configuration (Future)
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000

# Performance Configuration
TENSORFLOW_NUM_THREADS=0
CUDA_VISIBLE_DEVICES=0

# Development Configuration
DEBUG=false
TESTING=false
PYTEST_VERBOSITY=1